<h1>Listing recipe_methods</h1>

<table>
  <tr>
    <th>Step</th>
    <th>Details</th>
    <th>Recipe</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipe_methods.each do |recipe_method| %>
  <tr>
    <td><%= recipe_method.step %></td>
    <td><%= recipe_method.details %></td>
    <td><%= recipe_method.recipe %></td>
    <td><%= link_to 'Show', [recipe_method.recipe, recipe_method] %></td>
    <td><%= link_to 'Edit', edit_recipe_recipe_method_path(recipe_method.recipe, recipe_method) %></td>
    <td><%= link_to 'Destroy', [recipe_method.recipe, recipe_method], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

